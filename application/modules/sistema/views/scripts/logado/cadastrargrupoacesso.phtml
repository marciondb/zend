    <form name="formularioCarregaMenu" action="<?php echo $this->url(array('module' => 'sistema', 'controller' => 'logado', 'action' => 'ajaxgravagrupo'), null, 1); ?>" method="post">
       
        <div class="modal_filtro">
            <h3>Funcionalidades</h3>
